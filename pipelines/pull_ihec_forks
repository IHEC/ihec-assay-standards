#!/bin/bash



if [[ ${1:-"https"} == "ssh" ]]; then 
  echo "need  to pull submodules ...use ssh"
  exit 1
  git clone git@github.com:IHEC/grape-nf.git
  git clone --recursive git@github.com:IHEC/gemBS.git 
else
  git clone --recursive https://github.com/IHEC/gemBS.git
  git clone https://github.com/IHEC/grape-nf.git
fi






